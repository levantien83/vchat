<%= form_for [@user, @message] do |f| %>
  <div class="form-group">
    <%= f.label :to_id %>
    <%= f.select :to_id, @friends.map{|u| [u.email, u.id]}, {}, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: "form-control" %>
  </div>

  <%= f.submit "Send", class: "btn btn-secondary" %>
<% end %>